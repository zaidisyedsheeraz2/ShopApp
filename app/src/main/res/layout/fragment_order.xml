<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zaidi_sheeraz.navdrawer.OrderFragment">


    <!--<AnalogClock-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/analogClock"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_centerHorizontal="true" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="View Kart"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/cart"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Order Tracking"
            android:textSize="30dp"
            android:textStyle="bold"
        android:layout_below="@id/cart"
        android:id="@+id/tracking" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dilivary/Payment Options"
            android:id="@+id/delivary_heading"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/tracking"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/delivary_heading"
            android:id="@+id/radio_group"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Option 1"
                android:textSize="20sp"
                android:id="@+id/radioButton" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Option 2"
                android:textSize="20sp"
                android:id="@+id/radioButton2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Option 3"
                android:textSize="20sp"
                android:id="@+id/radioButton3" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:id="@+id/button" />


        </RadioGroup>


        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Order Tracking"-->
            <!--android:layout_below="@id/radio_group"-->
            <!--android:id="@+id/button2" />-->
    </RelativeLayout>
</RelativeLayout>
